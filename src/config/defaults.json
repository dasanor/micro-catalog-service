{
  "services": {
    "name": "catalog",
    "version": "v1"
  },
  "models": {
    "productModel": "./models/productModel",
    "categoryModel": "./models/categoryModel"
  },
  "hooks": {
    "checkCategories": {
      "handler": "./operations/products/createProduct/hooks/checkCategories"
    },
    "checkClassifications": {
      "handler": "./operations/products/createProduct/hooks/checkClassifications"
    },
    "checkVariants": {
      "handler": "./operations/products/createProduct/hooks/checkVariants"
    }
  },
  "maxCategoriesPerProduct": 5,
  "search": {
    "host": "localhost:9200"
  },
  "workers": [
    {
      "worker": "indexProduct",
      "handler": "./jobs/indexProduct"
    }
  ],
  "cache": {
    "products": 3600000
  },
  "bus": {
    "engines": {
      "local": {
        "handler": "./local"
      },
      "amqp": {
        "handler": "./amqp",
        "url": "amqp://localhost"
      }
    },
    "channels": {
      "products": {
        "name": "PRODUCTS",
        "engine": "amqp"
      }
    }
  }
}
